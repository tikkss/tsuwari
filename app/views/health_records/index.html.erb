<h1><%= HealthRecord.model_name.human + t(:list) %></h1>

<%= link_to t(:new) + t(:create), new_health_record_path, class: "btn btn-primary" %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= HealthRecord.human_attribute_name(:date) %></th>
      <th><%= HealthRecord.human_attribute_name(:time_period) %></th>
      <th><%= HealthRecord.human_attribute_name(:health) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @health_records.each do |health_record| %>
      <tr>
        <td><%= health_record.date %></td>
        <td><%= health_record.get_time_period[:label] %></td>
        <td><%= image_tag "#{health_record.get_health[:value]}.png" %></td>
        <td><%= link_to t(:show), health_record, class: "btn" %></td>
        <td><%= link_to t(:edit), edit_health_record_path(health_record), class: "btn" %></td>
        <td><%= link_to t(:destroy), health_record,
          method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

