<%= form_for(@food, html: { class: "form-search" }) do |f| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
      <% @food.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="span1">
      <%= f.label :name, Food.human_attribute_name(:name) %>
    </div>
    <%= f.text_field :name, class: "input-medium search-query" %>
  </div>
  <br />
  <div class="row food-search">
    <div class="span1">
      <%= f.label Taste.model_name.human %>
    </div>
    <%= f.collection_check_boxes :taste_ids, @tastes, :id, :name do |b|
      b.label { b.check_box + b.text }
    end %>
  </div>
  <br />
  <div class="row">
    <div class="span1">
      <%= f.label "写真" %>
    </div>
    <%= f.file_field :photo %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit class: "btn" %>
  </div>
<% end %>
