<h1><%= Food.model_name.human + t(:show) %></h1>

<br />

<p id="notice"><%= notice %></p>

<p>
<strong><%= Food.human_attribute_name(:name) %>:</strong>
  <%= @food.name %>

  <br />

  <strong><%= Taste.model_name.human %>:</strong>
  <%= @food.tastes.pluck(:name).join(", ") %>

  <br />

  <strong><%= Food.human_attribute_name(:photo) %>:</strong>
  <%= image_tag @food.photo.url(:medium) %>
</p>

<%= link_to t(:edit), edit_food_path(@food) %> |
<%= link_to t("back"), foods_path %>
