<h1><%= Shop.model_name.human + t('list') %></h1>
<hr />

<%= link_to Shop.model_name.human + t('add'), new_shop_path,
  class: 'btn btn-primary' %>

<br />
<br />

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= Shop.human_attribute_name :name %></th>
      <th><%= Shop.human_attribute_name :prefecture %></th>
      <th><%= Shop.human_attribute_name :city %></th>
      <th><%= Shop.human_attribute_name :address %></th>
      <th><%= Shop.human_attribute_name :url %></th>
      <th><%= Shop.human_attribute_name :category_id %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.prefecture %></td>
        <td><%= shop.city %></td>
        <td><%= shop.address %></td>
        <td><%= shop.url %></td>
        <td><%= shop.category.try(:name) %></td>
        <td>
          <%= link_to t('show'), shop,
            class: 'btn btn-small' %>
          <%= link_to t('edit'), edit_shop_path(shop),
            class: 'btn btn-small' %>
          <%= link_to t('destroy'), shop, method: :delete, data: { confirm: t('Are you sure?')},
            class: 'btn btn-small btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
